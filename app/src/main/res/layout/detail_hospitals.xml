<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/DetailsHospital_Image"
                android:src="@drawable/marvel"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp"
                />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RatingBar
                    android:id="@+id/rating"
                    style="?android:ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    app:layout_constraintStart_toStartOf="@id/parent" />

                <ToggleButton
                    android:id="@+id/DetailsHospital_toggle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="12dp"
                    android:textOff=""
                    android:textOn=""
                    app:layout_constraintEnd_toEndOf="@id/parent"
                    app:layout_constraintStart_toEndOf="@id/rating" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/DetailsHospital_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Name"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/DetailsHospital_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Address"
                android:textColor="#000"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/DetailsHospital_webSite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Web Site"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/DetailsHospital_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Email"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/DetailsHospital_Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Phone No"
                android:textColor="#000"
                android:textSize="20dp" />



        </LinearLayout>
    </ScrollView>
</LinearLayout>