<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.example.gmsproduction.dregypt.ui.activities.MedicalGuideActivity">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#fff">

        <com.daimajia.slider.library.Indicators.PagerIndicator
            android:id="@+id/custom_indicator_ducks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:gravity="center|bottom"
            android:padding="5dp"
            custom:selected_color="#0095BF"
            custom:selected_height="6dp"
            custom:selected_padding_left="2dp"
            custom:selected_padding_right="2dp"
            custom:selected_width="6dp"
            custom:shape="rect"
            custom:unselected_color="#55333333"
            custom:unselected_height="6dp"
            custom:unselected_padding_left="2dp"
            custom:unselected_padding_right="2dp"
            custom:unselected_width="6dp" />
    </com.daimajia.slider.library.SliderLayout>

    <com.daimajia.slider.library.Indicators.PagerIndicator
        android:id="@+id/custom_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/parent"
        app:layout_constraintTop_toBottomOf="@+id/slider" />

    <RelativeLayout
        android:id="@+id/next_name1"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"

            android:id="@+id/image_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/hospital_medical" />

        <TextView
            android:layout_centerVertical="true"

            android:id="@+id/text_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/image_name1"
            android:text="Hospitals"
            android:textColor="#fff"
            android:textSize="22dp" />


        <ImageView
            android:layout_centerVertical="true"

            android:id="@+id/medical_Guide_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/next_medical" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/next_name2"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"

            android:id="@+id/image_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/clinic_medical" />

        <TextView
            android:layout_centerVertical="true"

            android:id="@+id/text_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/image_name2"
            android:text="Clinics"
            android:textColor="#fff"
            android:textSize="22dp" />


        <ImageView
            android:layout_centerVertical="true"

            android:id="@+id/medical_Guide_img2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/next_medical" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/next_name3"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/pharmacy_medical" />

        <TextView
            android:id="@+id/text_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/image_name3"
            android:text="Pharmacy"
            android:textColor="#fff"
            android:textSize="22dp" />


        <ImageView
            android:id="@+id/medical_Guide_img3"
            android:layout_centerVertical="true"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/next_medical" />
    </RelativeLayout>


</LinearLayout>
